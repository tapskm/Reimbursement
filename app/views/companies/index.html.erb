<h1>Companies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Employee Count</th>
      <th>Total Reimbursements</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.employees.count %></td>
        <td>Rs.<%=company.reimbursement_claims.sum(:amount).to_i %></td>
        <td>
          <%= link_to 'View', company_path(company), class: "btn btn-sm btn-info" %> |
          <%= link_to 'Edit', edit_company_path(company), class: "btn btn-sm btn-warning" %> |
          <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Company', new_company_path, class: "btn btn-success" %>

