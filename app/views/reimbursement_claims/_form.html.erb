<%= form_with(model: reimbursement_claim, local: true, html: { multipart: true }) do |form| %>
  <% if reimbursement_claim.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(reimbursement_claim.errors.count, "error") %> prohibited this reimbursement claim from being saved:</h4>
      <ul>
        <% reimbursement_claim.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :purpose, class: "form-label" %>
    <%= form.text_area :purpose, class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :amount, class: "form-label" %>
    <%= form.number_field :amount, class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_expenditure, class: "form-label" %>
    <%= form.date_field :date_of_expenditure, class: "form-control",required: true %>
  </div>

  <div class="form-group">
    <%= form.label :employee_id, class: "form-label" %>
    <%= form.collection_select :employee_id, Employee.all, :id, :name, { prompt: "Select Employee" }, { class: "form-control",required: true } %>
  </div>

  <div class="form-group">
    <%= form.label :receipt, class: "form-label" %><br>
    <%= form.file_field :receipt, class: "form-control-file",required: true %>
  </div><br>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div><br>
<% end %>

